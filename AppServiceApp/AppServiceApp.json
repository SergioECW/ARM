{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "ServicePlanArroyoName": {
        "type": "string",
        "minLength": 1
      },
      "ServicePlanArroyoSkuName": {
        "type": "string",
        "defaultValue": "F1",
        "allowedValues": [
          "F1",
          "D1",
          "B1",
          "B2",
          "B3",
          "S1",
          "S2",
          "S3",
          "P1",
          "P2",
          "P3",
          "P4"
        ],
        "metadata": {
          "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
        }
      }},
    "variables": {
      "WebNodeJSAppName": "[concat('WebNodeJSApp', uniqueString(resourceGroup().id))]",      
      "arroyoName": "[concat('arroyo', uniqueString(resourceGroup().id))]",
      "arroyostorageaccountName": "[concat('arroyostorageaccount', uniqueString(resourceGroup().id))]"},
    "resources": [
      {
        "name": "[parameters('ServicePlanArroyoName')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-08-01",
        "sku": {
          "name": "[parameters('ServicePlanArroyoSkuName')]"
        },
        "dependsOn": [],
        "tags": {
          "displayName": "ServicePlanArroyo"
        },
        "properties": {
          "name": "[parameters('ServicePlanArroyoName')]",
          "numberOfWorkers": 1
        }
      },
      {
        "name": "[variables('WebNodeJSAppName')]",
        "type": "Microsoft.Web/sites",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-08-01",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', parameters('ServicePlanArroyoName'))]"
        ],
        "tags": {
          "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('ServicePlanArroyoName')))]": "Resource",
          "displayName": "WebNodeJSApp"
        },
        "properties": {
          "name": "[variables('WebNodeJSAppName')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('ServicePlanArroyoName'))]"
        },
        "resources": [
          {
            "name": "appsettings",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "ResARM",
            "apiVersion": "2018-11-01",
            "dependsOn": [
              "[resourceId('Microsoft.Web/sites', variables('WebNodeJSAppName'))]"
            ],
            "tags": {
              "displayName": "appconfig"
            },
            "properties": {
              "key1": "value1",
              "key2": "value2"
            }
          }
        ]
      }        
    ],
    "outputs": {}
  }
  