{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ServicePlanArroyoName": {
      "type": "string",
      "defaultValue": "APIARM",
      "minLength": 1
    },
    "ServicePlanArroyoSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    }},
  "variables": {
    "ApiName": "[concat('Api', uniqueString(resourceGroup().id))]",
    "arroyoName": "[concat('arroyo', uniqueString(resourceGroup().id))]",
    "arroyostorageaccountName": "[concat('arroyostorageaccount', uniqueString(resourceGroup().id))]"},
  "resources": [    
    {
      "name": "[variables('ApiName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('ServicePlanArroyoName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('ServicePlanArroyoName')))]": "Resource",
        "displayName": "Api"
      },
      "properties": {
        "name": "[variables('ApiName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('ServicePlanArroyoName'))]",
        "siteConfig": {
          "connectionStrings": [
            {
              "name": "BD_ConnString",
              "connectionString": ""
            },
            {
              "name": "Storage_Conn",
              "connectionString": ""
            },
            {
              "name": "Kv_Conn",
              "connectionString": ""
            }
          ]
        }
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('ApiName'))]"
          ],
          "tags": {
            "displayName": "appconfig"
          },
          "properties": {
            "key1": "value1",
            "key2": "value2"
          }
        }
      ]
    }
  ],
  "outputs": {}
}
